XINZHIYUAN_FETCH_PAGES=1

# ============================================
# LLM Provider Configuration
# ============================================

# --- Gemini (Google) ---
GEMINI_API_KEY=your_gemini_api_key
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-2.0-flash-exp

# --- OpenAI / Compatible APIs ---
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# --- LLM Provider Selection ---
# Options: 'gemini' or 'openai'
LLM_PROVIDER=gemini

# --- Translation ---
OPEN_TRANSLATE=false
USE_MODEL_PLATFORM=GEMINI

# ============================================
# Output Channels
# ============================================

# --- Feishu (Lark) ---
FEISHU_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/your_webhook

# --- Telegram ---
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_CHAT_ID=your_chat_id

# ============================================
# GitHub Integration (Optional)
# ============================================

# GitHub Personal Access Token
GITHUB_TOKEN=github_pat_your_token_here

# Repository for archiving reports
GITHUB_REPO_OWNER=your_username
GITHUB_REPO_NAME=daily-ai-insight-reports
GITHUB_BRANCH=main

# ============================================
# Application Settings
# ============================================

# Report Branding
DAILY_TITLE=AI洞察日报
