# ============================================
# Daily AI Insight - Environment Configuration
# ============================================

# ============================================
# FOLO Configuration (Required for most collectors)
# ============================================

# FOLO Cookie - Get from browser DevTools (F12) -> Network -> Cookie header
FOLO_COOKIE=your_cookie_here

# FOLO API Configuration
FOLO_DATA_API=https://api.follow.is/entries
FOLO_FILTER_DAYS=1

# ============================================
# Data Source Configuration
# ============================================

# --- News Aggregator ---
NEWS_AGGREGATOR_LIST_ID=158437828119024640
NEWS_AGGREGATOR_FETCH_PAGES=1

# --- HuggingFace Papers ---
HGPAPERS_LIST_ID=158437917409783808
HGPAPERS_FETCH_PAGES=1

# --- Twitter/X ---
TWITTER_LIST_ID=153028784690326528
TWITTER_FETCH_PAGES=1

# --- Reddit ---
REDDIT_LIST_ID=167576006499975168
REDDIT_FETCH_PAGES=1

# --- Xiaohu AI ---
# Get your list ID from https://app.follow.is/list/[LIST_ID]
XIAOHU_LIST_ID=your_list_id
XIAOHU_FETCH_PAGES=1

# --- Generic Papers (ArXiv, etc.) ---
PAPERS_LIST_ID=your_list_id
PAPERS_FETCH_PAGES=1

# --- GitHub Trending ---
GITHUB_TRENDING_API=https://git-trending.justlikemaki.vip/topone/?since=daily
